<UserControl x:Class="WindowResizer.UI.Controls.KeysDialogControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:WindowResizer.UI.Controls"
             mc:Ignorable="d">
    <Grid>
        <Grid MinWidth="498" MinHeight="220">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition MinHeight="110" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>

            <StackPanel Grid.Row="0" Margin="0,0,12,0">
                <TextBlock Text="Press a combination of keys to change this shortcut" />
            </StackPanel>

            <local:KeysVisualControl DataContext="{Binding HotKeys}" Grid.Row="1" />

            <StackPanel Orientation="Vertical"
                        Grid.Row="2"
                        Margin="0,10,0,0"
                        VerticalAlignment="Top">
                <TextBlock
                    Text="Only shortcuts that start with **Windows key**, **Ctrl**, **Alt** or **Shift** are valid."
                    FontSize="12" />
            </StackPanel>
        </Grid>
    </Grid>
</UserControl>
